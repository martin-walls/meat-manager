<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- base app theme -->
    <style name="BaseTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- App colors -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>

        <!-- Error color eg for error text on inputs -->
        <item name="colorError">@color/error_red</item>

        <!-- Background of activities/fragments -->
        <item name="android:windowBackground">@color/window_background</item>

        <!-- Dialog background color -->
        <item name="colorBackgroundFloating">@color/window_background</item>

        <!-- Views throughout app -->
        <item name="floatingActionButtonStyle">@style/Fab</item>

        <!-- For text input layouts throughout app -->
        <item name="textInputStyle">@style/AppTextInputLayout</item>

        <!-- Nav drawer -->
        <item name="navDrawerBackgroundColor">?android:windowBackground</item>
        <item name="navDrawerItemStyle">@style/NavDrawerItem</item>

        <!-- Text style for dialog titles -->
        <item name="dialogTitleStyle">@style/DialogTitle</item>
    </style>

    <!-- light theme -->
    <style name="AppTheme" parent="BaseTheme">
        <!-- Text -->
        <item name="textColorPrimary">@color/dark_grey</item>
        <item name="textColorSecondary">@color/medium_dark_grey</item>
        <item name="android:textColorPrimary">?textColorPrimary</item>
        <item name="android:textColorSecondary">?textColorSecondary</item>
        <item name="textColorEmphasis">?colorPrimary</item>

        <!-- Theme for actionbar overflow menus -->
        <item name="menuPopupOverlay">@style/Theme.MaterialComponents.Light.NoActionBar</item>

        <!-- Generic background color for selected items eg current tab in nav drawer -->
        <item name="selectedItemBackgroundColor">@color/light_grey</item>

        <!-- List divider color -->
        <item name="dividerColor">@color/medium_dark_grey</item>

        <item name="itemHighlight">@color/medium_light_grey</item>

        <!-- Dashboard graph -->
        <item name="dashboardGraphAmountBarColor">@color/dashboard_graph_bar</item>
        <item name="dashboardAmountTooltipColor">@color/dashboard_tooltip</item>
        <item name="dashboardAmountTooltipTextColor">?textColorPrimary</item>
        <item name="dashboardGraphBarInnerTextColor">?textColorPrimary</item>
        <item name="dashboardGraphBarOuterTextColor">?textColorPrimary</item>

        <item name="dashboardGraphMoreReqBarColor">@color/dashboard_graph_bar_more_req</item>
        <item name="dashboardMoreReqTooltipColor">@color/dashboard_tooltip_more_req</item>
        <item name="dashboardMoreReqTooltipTextColor">@color/white</item>

        <item name="dashboardGraphLessReqBarColor">@color/dashboard_graph_bar_less_req</item>
        <item name="dashboardLessReqTooltipColor">@color/dashboard_tooltip_less_req</item>
        <item name="dashboardLessReqTooltipTextColor">@color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <!-- theme with fade in and out transitions for windows -->
    <style name="AppTheme.FadeTransition">
        <item name="android:windowActivityTransitions">true</item>

        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
</resources>