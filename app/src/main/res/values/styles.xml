<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="floatingActionButtonStyle">@style/Fab</item>
        <item name="textInputStyle">@style/AppTextInputLayout</item>

        <!-- text -->
        <item name="textColorNormal">@color/text_medium</item>
        <item name="textColorDark">@color/text_dark</item>
        <item name="textColorError">@color/error_red</item>

        <item name="dividerColor">@color/divider</item>
        <item name="selectedItemBackgroundColor">@color/light_grey</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="Fab" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:backgroundTint">?attr/colorAccent</item>
        <item name="rippleColor">@color/fab_ripple_light</item>
        <item name="tint">@android:color/black</item>
    </style>

    <style name="NavDrawerItem">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">?attr/textColorDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawableTint">?attr/textColorDark</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/nav_drawer_item_background</item>
    </style>

    <style name="EmptyView">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="errorTextColor">?attr/textColorError</item>
    </style>

    <!-- shows clear icon at end -->
    <style name="AppTextInputLayout.Searchable">
        <item name="endIconMode">custom</item>
        <item name="endIconDrawable">@drawable/ic_cancel</item>
    </style>

    <!-- search -->
    <style name="SearchResultsItemText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/textColorNormal</item>
    </style>

    <style name="SearchResultsItemText.Selectable">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="SearchResultsItemText.Selectable.AddNew">
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">?attr/textColorDark</item>
        <item name="android:drawableStart">@drawable/ic_add</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:text">@string/search_add_new</item>
    </style>

    <style name="SearchResultsLayout">
        <item name="android:divider">@drawable/divider_thin</item>
        <item name="android:showDividers">middle</item>
    </style>

    <!-- Exchange screen styles -->
    <style name="ExchangeRateText">
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">?attr/textColorDark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ExchangeRateText.Primary" />

    <style name="ExchangeRateText.Secondary">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="ExchangeCurrentCurrency">
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ExchangeHistoryTimeDivider">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ExchangeHistoryItemText">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ChooseCurrenciesItem">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/textColorNormal</item>
    </style>

    <style name="ChooseCurrenciesItem.Star">
        <item name="android:drawableEnd">@drawable/ic_star_outline</item>
    </style>

</resources>
