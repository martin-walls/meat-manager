<resources>

    <style name="Fab" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/fab_background</item>
        <item name="rippleColor">@color/fab_ripple_light</item>
        <item name="tint">@android:color/black</item>
    </style>

    <style name="NavDrawerItem">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">?textColorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawableTint">?textColorPrimary</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/nav_drawer_item_background</item>
    </style>

    <style name="EmptyView">
        <item name="android:textSize">20sp</item>
    </style>


    <!-- Generic text styles -->
    <style name="TextNormal">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?textColorSecondary</item>
    </style>

    <style name="TextDark">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?textColorPrimary</item>
    </style>


    <!-- Dialog styles -->
    <style name="DialogTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?textColorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogMessageText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?textColorSecondary</item>
    </style>


    <!-- List item text styles -->
    <style name="ItemInfoPrimary">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?textColorPrimary</item>
    </style>

    <style name="ItemInfoSecondary">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?textColorSecondary</item>
    </style>

    <style name="ItemAmountPrimary">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?textColorPrimary</item>
    </style>

    <style name="ItemAmountSecondary">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?textColorSecondary</item>
    </style>

    <style name="ListItemTextPrimary">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?textColorPrimary</item>
    </style>

    <style name="ListItemTextSecondary">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?textColorSecondary</item>
    </style>

    <!-- For text date dividers in lists -->
    <style name="ListSectionDividerText">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?textColorEmphasis</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!-- Input styles -->
    <style name="AppTextInputLayout" parent="Widget.Design.TextInputLayout">
        <!-- Not needed, uses ?colorError by default -->
        <!--<item name="errorTextColor">?textColorError</item>-->
        <item name="android:textColorHint">?textColorSecondary</item>
    </style>

    <!-- shows clear icon at end -->
    <style name="AppTextInputLayout.Searchable">
        <item name="endIconMode">custom</item>
        <item name="endIconDrawable">@drawable/ic_cancel</item>
        <item name="endIconTint">?colorControlNormal</item>
    </style>

    <!-- For text on input forms such as reminder field for contracts -->
    <style name="InputFormText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?textColorSecondary</item>
    </style>

    <style name="InputFormTextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="InputFormTextAppearance.Unselected">
        <item name="android:textColor">?textColorSecondary</item>
    </style>

    <style name="InputFormTextAppearance.Selected">
        <item name="android:textColor">?textColorPrimary</item>
    </style>

    <style name="InputFormTextAppearance.Invalid">
        <item name="android:textColor">?colorError</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <!-- For add another product button for orders/contracts -->
    <style name="AddAnotherProductText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">?textColorSecondary</item>
    </style>

    <!-- For search in input forms -->
    <style name="SearchResultsItem">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?textColorSecondary</item>
    </style>

    <style name="SearchResultsItem.Selectable">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="SearchResultsItem.Selectable.AddNew">
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">?textColorPrimary</item>
        <item name="android:drawableStart">@drawable/ic_add</item>
        <item name="android:drawablePadding">16dp</item>
    </style>

    <style name="SearchResultsLayout">
        <item name="android:divider">@drawable/divider_thin</item>
        <item name="android:showDividers">middle</item>
    </style>


    <!-- For details such as destination in details pages -->
    <style name="DetailsText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?textColorSecondary</item>
    </style>


    <!-- Exchange screen styles -->
    <style name="ExchangeRateText">
        <item name="android:textSize">48sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ExchangeRateText.Primary">
        <item name="android:textColor">?textColorPrimary</item>
    </style>

    <style name="ExchangeRateText.Secondary">
        <item name="android:textColor">?textColorEmphasis</item>
    </style>

    <style name="ExchangeCurrentCurrency">
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?textColorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ExchangeHistoryItemText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?textColorSecondary</item>
    </style>

    <!-- tutorial screens -->
    <style name="TutorialTitleText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TutorialButtonPrimary">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">64dp</item>
        <item name="android:paddingBottom">64dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/tutorial_btn_primary</item>
        <item name="android:foreground">@drawable/tutorial_btn_primary_ripple</item>
    </style>

    <style name="TutorialButtonPrimary.DarkText">
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="TutorialButtonThemeLight" parent="TutorialButtonPrimary.DarkText">
        <item name="android:background">@drawable/tutorial_theme_select_light</item>
        <item name="android:foreground">@null</item>
    </style>

    <style name="TutorialButtonThemeDark" parent="TutorialButtonPrimary">
        <item name="android:background">@drawable/tutorial_theme_select_dark</item>
        <item name="android:foreground">@null</item>
    </style>

    <style name="TutorialButtonSecondary">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:background">@drawable/tutorial_btn_secondary</item>
    </style>

</resources>
