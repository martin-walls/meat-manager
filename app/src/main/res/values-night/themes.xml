<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- App colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Text -->
        <item name="textColorPrimary">@color/text_lighter</item>
        <item name="textColorSecondary">@color/text_light</item>
        <item name="android:textColorPrimary">?textColorPrimary</item>
        <item name="android:textColorSecondary">?textColorSecondary</item>

        <!-- Error color eg for error text on inputs -->
        <item name="colorError">@color/error_red</item>

        <!-- Background of activities/fragments -->
        <item name="android:windowBackground">@color/dark_background</item>

        <!-- Dialog background color -->
        <item name="colorBackgroundFloating">@color/dark_background</item>

        <!-- Action bar -->
        <item name="actionBarStyle">@style/Widget.MaterialComponents.ActionBar.Primary</item>
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <!-- Actionbar overflow menus -->
        <item name="menuPopupOverlay">@style/Theme.MaterialComponents.NoActionBar</item>
        <item name="actionBarPopupTheme">?menuPopupOverlay</item>

        <!-- Views throughout app -->
        <item name="floatingActionButtonStyle">@style/Fab</item>
        <!-- For text input layouts throughout app -->
        <item name="textInputStyle">@style/AppTextInputLayout</item>

        <!-- Nav drawer -->
        <item name="navDrawerBackgroundColor">@color/dark_background</item>
        <item name="navDrawerItemStyle">@style/NavDrawerItem</item>

        <!-- Text style for dialog titles -->
        <item name="dialogTitleStyle">@style/DialogTitle</item>

        <!-- Generic background color for selected items eg current tab in nav drawer -->
        <item name="selectedItemBackgroundColor">@color/dark_selected_item</item>

        <!-- List divider color -->
        <item name="dividerColor">@color/medium_dark_grey</item>

        <!-- Dashboard graph -->
        <item name="dashboardGraphBarColor">@color/dashboard_graph_bar</item>
        <item name="dashboardTooltipColor">@color/dashboard_tooltip</item>
        <item name="dashboardTooltipTextColor">@color/dark_grey</item>
        <item name="dashboardGraphBarInnerTextColor">@color/dark_grey</item>
        <item name="dashboardGraphBarOuterTextColor">?textColorPrimary</item>

        <item name="dashboardGraphReqBarColor">@color/dashboard_graph_bar_req</item>
        <item name="dashboardReqTooltipColor">@color/dashboard_tooltip_req</item>
        <item name="dashboardReqTooltipTextColor">@color/white</item>
    </style>

</resources>