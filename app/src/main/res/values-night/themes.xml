<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="BaseTheme">
        <!-- Text -->
        <item name="textColorPrimary">@color/light_grey</item>
        <item name="textColorSecondary">@color/medium_light_grey</item>
        <item name="android:textColorPrimary">?textColorPrimary</item>
        <item name="android:textColorSecondary">?textColorSecondary</item>
        <item name="textColorEmphasis">@color/color_primary_light</item>

        <!-- Action bar -->
        <item name="actionBarStyle">@style/Widget.MaterialComponents.ActionBar.Primary</item>
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <!-- Actionbar overflow menus -->
        <item name="menuPopupOverlay">@style/Theme.MaterialComponents.NoActionBar</item>
        <item name="actionBarPopupTheme">?menuPopupOverlay</item>

        <!-- Generic background color for selected items eg current tab in nav drawer -->
        <item name="selectedItemBackgroundColor">@color/dark_grey</item>

        <!-- List divider color -->
        <item name="dividerColor">@color/medium_dark_grey</item>

        <!-- Dashboard graph -->
        <item name="dashboardGraphBarColor">@color/dashboard_graph_bar</item>
        <item name="dashboardTooltipColor">@color/dashboard_tooltip</item>
        <item name="dashboardTooltipTextColor">@color/dark_grey</item>
        <item name="dashboardGraphBarInnerTextColor">@color/dark_grey</item>
        <item name="dashboardGraphBarOuterTextColor">?textColorPrimary</item>

        <item name="dashboardGraphReqBarColor">@color/dashboard_graph_bar_req</item>
        <item name="dashboardReqTooltipColor">@color/dashboard_tooltip_req</item>
        <item name="dashboardReqTooltipTextColor">@color/white</item>
    </style>

</resources>