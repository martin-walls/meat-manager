<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <!-- day title -->
    <TextView
        android:id="@+id/day_divider"
        style="@style/ListSectionDividerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <!-- primary currency -->
        <TextView
            android:id="@+id/currency_primary"
            style="@style/ExchangeHistoryItemText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="end|center_vertical"
            />

        <TextView
            style="@style/ExchangeHistoryItemText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="@string/exchange_currency_separator"
            />

        <!-- secondary currency -->
        <TextView
            android:id="@+id/currency_secondary"
            style="@style/ExchangeHistoryItemText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="start|center_vertical"
            />

    </LinearLayout>
</LinearLayout>