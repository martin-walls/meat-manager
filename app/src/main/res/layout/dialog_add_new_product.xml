<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_layout_product_name"
        style="@style/AppTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dialog_margin_horizontal"
        android:layout_marginTop="@dimen/dialog_margin_vertical"
        android:layout_marginEnd="@dimen/dialog_margin_horizontal"
        android:hint="@string/stock_product_input_name"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionNext"
            android:inputType="text"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_layout_meat_type"
        style="@style/AppTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dialog_margin_horizontal"
        android:layout_marginTop="@dimen/view_spacing_vertical"
        android:layout_marginEnd="@dimen/dialog_margin_horizontal"
        android:hint="@string/stock_product_input_meat_type"
        app:endIconDrawable="@drawable/ic_add"
        app:endIconMode="custom"
        >

        <AutoCompleteTextView
            android:id="@+id/edit_text_meat_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionDone"
            android:inputType="text"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:id="@+id/search_results_layout"
        style="@style/SearchResultsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        >

        <com.martinwalls.nea.components.AddNewTextView
            android:id="@+id/add_new"
            style="@style/SearchResultsItemText.Selectable.AddNew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <com.martinwalls.nea.components.CustomRecyclerView
            android:id="@+id/recycler_view_results"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/no_results"
            style="@style/SearchResultsItemText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/search_no_matches"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dialog_margin_horizontal"
        android:layout_marginTop="@dimen/view_spacing_vertical"
        android:layout_marginEnd="@dimen/dialog_margin_horizontal"
        >

        <Button
            android:id="@+id/btn_cancel"
            style="?attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="@string/stock_product_new_cancel"
            />

        <Button
            android:id="@+id/btn_done"
            style="?attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="@string/stock_product_new_done"
            />
    </RelativeLayout>

</LinearLayout>